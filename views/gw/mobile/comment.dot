<script src="/gw/mobile/js/zepto.picLazyLoad.min.js"></script>
<script src="/gw/mobile/js/header.js"></script>
<script type="text/javascript">
var FBT = 'https://m.feibotong.com';
var commentObj = {
    init:function(page,pagesize){
        var commentlist;
        var data = {
            offset: 0,
            pagesize: 20
        }
        $.ajax({
            method: "POST",
            url: FBT+"/api3/comments/list",
            data: data,
            dataType: "jsonp",
            success:function(data){
                if(data.code == 0){
                    $('.comment-list-ul li').remove();
                    commentlist = data.records;
                    if(commentlist.length > 0){
                        for(var i=0;i<commentlist.length;i++){                            
                            $('.comment-list-ul').append(commentObj.appendLi(commentlist[i]));
                            $('.img-lazyload').picLazyLoad();
                        }
                    }   

                    if(commentlist.length >= 20){
                        $('#loadmore').show();
                        $('#nomoreData').hide();
                    }else {
                        $('#loadmore').hide();
                        $('#nomoreData').show();
                    }                 
                }
            },
        });
    },
    appendLi:function(data){
        var htmlStr = new StringBuffer();//$('.comment-list-ul').html();
        htmlStr.append('<li>');
        htmlStr.append('<div class="top">');
        htmlStr.append('<div class="avatar">');
        htmlStr.append('<img class="img-lazyload" src="/gw/mobile/images/comment/image05.png" data-original="'+data.useravatar+'" />');
        htmlStr.append('<img class="cover" src="/gw/mobile/images/comment/icn_img_border.png"/>');
        htmlStr.append('</div>');
        htmlStr.append('<span class="name-block">');
        htmlStr.append('<p>'+data.usercall+'</p>');
        htmlStr.append('<em>'+data.city+'</em>');
        htmlStr.append('</span>');
        htmlStr.append('<div class="star">');
        htmlStr.append('<span class="time-block">');
        htmlStr.append('<p>'+longToYYYYMMDDHHMM(data.commenttime)+'</p>');
        htmlStr.append('<img src="/gw/mobile/images/comment/icon03.png" />');
        htmlStr.append('</span>');
        htmlStr.append('</div>');        
        htmlStr.append('</div>');
        htmlStr.append('<div class="star-block">');
        htmlStr.append('<p>评价星级：</p>');
        htmlStr.append('<div class="star-content">');
        for(var i=0;i<data.servicescore;i++){
            htmlStr.append('<img src="/gw/mobile/images/comment/icon.png" />');
        }
        for(var j=0;j<(5-data.servicescore);j++){
            htmlStr.append('<img src="/gw/mobile/images/comment/icon02.png" />');
        }
        htmlStr.append('</div>');
        htmlStr.append('</div>');
        htmlStr.append('<p class="user-content">'+data.content+'</p>');
            
        if(data.responsecontent){
            htmlStr.append('<div class="service-response">');
            htmlStr.append('<img class="top-res-img" src="../..//gw/mobile/images/weixin/comment/icn_bg.png"/>');
            htmlStr.append('<p class="content-n"><em>飞泊通：</em>'+data.responsecontent+'</p>');
            htmlStr.append('<span class="time-block-bottom">');
            htmlStr.append('<p >'+longToYYYYMMDDHHMM(data.responsetime)+'</p>');
            htmlStr.append('</span>');
            htmlStr.append('</div>'); 
        }        
        htmlStr.append('</li>');
        return htmlStr.toString();
    },
    loadmoreData: function(page,pagesize){
        var commentlist;
        var data = {
            offset: page,
            pagesize: pagesize
        }
        var el=$.loading({content: '加载中...'});
        $.ajax({
            method: "POST",
            url: FBT+"/api3/comments/list",
            data: data,
            dataType: "jsonp",
            success:function(data){
            	setTimeout(function(){
            		el.loading('hide');
                    if(data.code == 0){
                        commentlist = data.records;
                        if(commentlist.length > 0){
                            for(var i=0;i<commentlist.length;i++){
                               $('.comment-list-ul').append(commentObj.appendLi(commentlist[i]));
                               $('.img-lazyload').picLazyLoad();
                            }
                        }   
                        if(commentlist.length >= 20){
                            $('#loadmore').show();
                            $('#nomoreData').hide();
                        }else {
                            $('#loadmore').hide();
                            $('#nomoreData').show();
                        }                 
                    }
            	},100);
            	
            },
        });
    }
}
$(function(){
    commentObj.init(0,20);
    $('#loadmore').click(function(){
        var nowPage = Math.floor($(this).attr('data-page'));
        nowPage++;
        var offset = (nowPage-1)*20 + 20;
        commentObj.loadmoreData(offset,20);
        $(this).attr('data-page',nowPage);
    });
    
    $('.img-lazyload').picLazyLoad();
});

function StringBuffer() {
    this.__strings__ = new Array();
}
StringBuffer.prototype.append = function (str) {
    this.__strings__.push(str);
    return this;    //方便链式操作
}
StringBuffer.prototype.toString = function () {
    return this.__strings__.join("");
}

</script>
